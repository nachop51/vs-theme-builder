{
  "name": "vs-theme-builder",
  "version": "2.2.2",
  "description": "Helper tool to facilitate the creation of Visual Studio Code themes programmatically.",
  "type": "module",
  "main": "dist/index.js",
  "types": "src/types.d.ts",
  "files": [
    "/dist",
    "/src/types.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nachop51/vs-theme-builder.git"
  },
  "bugs": {
    "url": "https://github.com/Nachop51/vs-theme-builder.git",
    "email": "nachoperalta0@gmail.com"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "bun build ./src/index.ts --outdir dist --minify --target node ",
    "lint": "bunx --bun biome lint ./src",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "prepublishOnly": "bun run clean && bun run lint && bun run test && bun run build"
  },
  "keywords": [
    "vscode",
    "theme",
    "builder",
    "generator",
    "color"
  ],
  "author": "Ignacio Peralta",
  "license": "MIT",
  "dependencies": {
    "chroma-js": "^2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "@types/chroma-js": "^2.4.4",
    "typescript": "^5.4.3"
  }
}
